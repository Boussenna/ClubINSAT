                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {% block spec %}<a class="navbar-brand" href="index.html.twig">Gérer mon compte</a>{% endblock spec %}
