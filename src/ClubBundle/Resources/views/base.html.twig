            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                {% block A %}
                <ul class="nav navbar-nav side-nav">
                    <li><a href="{{ path('club_homepage') }}"><i class="fa fa-dashboard"></i> Site Principal</a></li>
                    <li><a href="index.html.twig"><i class="fa fa-dashboard"></i> Utilisateurs</a></li>
